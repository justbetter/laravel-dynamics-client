{
    "name": "justbetter/laravel-dynamics-client",
    "description": "A client to connect with Microsoft Dynamics",
    "type": "package",
    "license": "MIT",
    "homepage": "https://github.com/justbetter/laravel-dynamics-client",
    "authors": [
        {
            "name": "Vincent Boon",
            "email": "vincent@justbetter.nl",
            "role": "Developer"
        },
        {
            "name": "Ramon Rietdijk",
            "email": "ramon@justbetter.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "justbetter/odata-client": "^1.2",
        "laravel/framework": "^10.0"
    },
    "require-dev": {
        "laravel/pint": "^1.6",
        "nunomaduro/larastan": "^2.5",
        "orchestra/testbench": "^8.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "JustBetter\\DynamicsClient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JustBetter\\DynamicsClient\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan",
        "style": "pint --test",
        "quality": [
            "@test",
            "@analyse",
            "@style"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "JustBetter\\DynamicsClient\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
